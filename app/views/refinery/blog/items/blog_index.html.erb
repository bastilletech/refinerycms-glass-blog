<section class="index blog-index">
  <% if @items.featured.any? %>
    <section class="featured-post steel-blue-bg white">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 p-y-lg">
            <h2>Featured Articles</h2>
            <div id="carousel-example-generic" class="carousel slide external-controls" data-ride="carousel">
              <div class="carousel-inner" role="listbox">
                <% @items.featured.each_with_index do |item, index| %>
                  <div class="carousel-item <%= 'active' if index == 0 %>">
                    <%= render partial: "refinery/blog/items/list_item", locals: {list_item: item, featured: true} %>
                  </div>
                <% end %>
              </div>
              <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <i class="icon icon-left-lg icon-lg"></i>
                <span class="sr-only">Previous</span>
              </a>
              <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <i class="icon icon-right-lg icon-lg"></i>
                <span class="sr-only">Next</span>
              </a>
              <ol class="carousel-indicators">
                <% @items.featured.each_with_index do |item, index| %>
                  <li data-target="#carousel-example-generic" data-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>"></li>
                <% end %>
              </ol>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>

  <%= render 'index_feed' %>

  <section class="subscription">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="subscription-inner gray-7-bg p-a-lg flex align-items-center off-white">
            <h5 class="flex-1 m-b-0">Be the first to read the latest</h5>
            <div id="mc_embed_signup" class="subscribe-wrapper flex-mode inverted">
              <!-- Begin MailChimp Signup Form -->
              <form action="//serena.us9.list-manage.com/subscribe/post?u=ce30e19f596ca27340953dd91&amp;amp;id=0f698983a3" method="post" id="subscribe-form" name="mc-embedded-subscribe-form" class="validate form-horizontal" target="_blank" novalidate="">
                <div id="mc_embed_signup_scroll">
                  <div class="form-group row">
                    <div class="mc-field-group col-xs-6 tight-gutter">
                      <input type="text" value="" name="FNAME" class="form-control" id="first-name" placeholder="First Name">
                    </div>
                    <div class="mc-field-group col-xs-6 tight-gutter">
                      <input type="text" value="" name="LNAME" class="form-control" id="mce-LNAME" placeholder="Last Name">
                    </div>
                  </div>
                  <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                  <div style="position: absolute; left: -5000px;"><input type="text" name="b_ce30e19f596ca27340953dd91_0f698983a3" tabindex="-1" value=""></div>
                  <div id="mce-responses" class="clear">
                    <div class="response" id="mce-error-response" style="display:none"></div>
                    <div class="response" id="mce-success-response" style="display:none"></div>
                  </div>
                  <div class="form-group row closed" id="open-form">
                    <div class="col-xs-12">
                      <div class="subscribe">
                        <input type="email" value="" name="EMAIL" class="email form-control" id="mce-EMAIL" placeholder="Your email">
                        <span class="subscribe-btn">
                          <button type="submit" name="subscribe" id="mc-embedded-subscribe" class="btn btn-white btn-sm">Subscribe</button>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
              <!--End mc_embed_signup-->
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="popular p-t-lg">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <h3 class="lined-heading text-uppercase text-center flex">Popular Articles</h3>
        </div>
      </div>
      <div class="row items-index grid-view">
        <%= render partial: "refinery/blog/items/card", collection: @popular_items if @popular_items.current_page == 1 %>
      </div>
    </div>
  </section>
</section>