<%= render 'refinery/admin/search_header', :url => refinery.blog_admin_categories_path %>
<div id="categories-index" <%= "class=infinite-scroll-container data-url=#{refinery.blog_admin_categories_path(:page => @categories.next_page)} data-pages-total=#{@categories.total_pages}" if @categories.any? %>>
  <% if @categories.any? %>
    <ul id='categories' class='list-unstyled sortable_list'>
      <%= render 'categories' %>
    </ul>
    <%= render 'refinery/admin/glass/infinite_scroll_spinner' %>
  <% else %>
    <p class="sortable_list">
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% end %>
    </p>
  <% end %>
</div>