<li class='page-listing' id="<%= dom_id(category) -%>">
  <div class="page-row">
    <!-- <i class="icon icon-file"></i> -->
    <a class="page-title" href="<%= refinery.edit_blog_admin_category_path(category) %>">
      <%= category.title %>
    </a>
    <span class='actions'>
      <%= render 'refinery/admin/glass/delete_button',
                 css_class: 'cancel confirm-delete circle-icon',
                 delete_url: refinery.blog_admin_category_path(category),
                 after_delete_url: refinery.blog_admin_categories_path,
                 confirm_text: 'Are you sure you want to delete this Category?',
                 delete_btn_text: '<i class="icon icon-trash"></i>'
      -%>
    </span>
  </div>
</li>
