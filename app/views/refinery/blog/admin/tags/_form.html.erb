<%= render 'refinery/blog/admin/submenu' %>

<div class="row">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <%= form_for [refinery, :blog_admin, @tag], :html => {:class => "ajax-form"} do |f| -%>
      <%= render '/refinery/admin/error_messages',
                  :object => @tag,
                  :include_object_name => true %>

      <div class='form-group'>
        <%= f.label :title, class: 'control-label' -%>
        <%= f.text_field :title, :class => 'form-control' -%>
      </div>

      <div class='form-group'>
        <%= f.label :meta, 'Alternative spellings, abreviations, search keywords', class: 'control-label' -%>
        <%= f.text_field :meta, :class => 'form-control' -%>
      </div>

      <%= render '/refinery/admin/form_actions', :f => f,
                 :continue_editing => false,
                 :delete_title => t('delete', :scope => 'refinery.blog.admin.tags.tag'),
                 :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @tag.title) -%>
    <% end # form_for -%>
  </div>
</div>

