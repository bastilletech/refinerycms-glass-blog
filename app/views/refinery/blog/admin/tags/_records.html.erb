<%= render 'refinery/admin/search_header', :url => refinery.blog_admin_tags_path %>
<div id="tags-index">
  <% if @tags.any? %>
    <ul id="tags" class="list-unstyled sortable_list infinite-scroll-container" data-pages-total="<%= @tags.total_pages %>">
      <%= render 'tags' %>
    </ul>
    <%= render 'refinery/admin/glass/infinite_scroll_spinner' %>
  <% else %>
    <p class="sortable_list">
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% end %>
    </p>
  <% end %>
</div>
