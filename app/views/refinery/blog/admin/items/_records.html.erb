<%= render 'refinery/admin/search_header', :url => refinery.blog_admin_items_path %>
<div id="items-index">
  <% if @items.any? %>
    <ul id='items' class="list-unstyled sortable_list infinite-scroll-container" data-pages-total="<%= @items.total_pages %>">
      <%= render 'items' %>
    </ul>
    <%= render 'refinery/admin/glass/infinite_scroll_spinner' %>
  <% else %>
    <p class="sortable_list">
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% end %>
    </p>
  <% end %>
</div>

