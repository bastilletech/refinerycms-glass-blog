<%= render 'refinery/admin/search_header', :url => refinery.blog_admin_sections_path %>
<div id="sections-index" <%= "class=infinite-scroll-container data-url=#{refinery.blog_admin_sections_path(:page => @sections.next_page)} data-pages-total=#{@sections.total_pages}" if @sections.any? %>>
  <% if @sections.any? %>
    <ul id='sections' class='list-unstyled sortable_list'>
      <%= render 'sections' %>
    </ul>
    <%= render 'refinery/admin/glass/infinite_scroll_spinner' %>
  <% else %>
    <p class="sortable_list">
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% end %>
    </p>
  <% end %>
</div>