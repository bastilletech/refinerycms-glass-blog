<li class='page-listing' id="<%= dom_id(section) -%>">
  <div class="page-row">
    <!-- <i class="icon icon-file"></i> -->
    <a class="page-title" href="<%= refinery.edit_blog_admin_section_path(section) %>">
      <%= section.slug %>
    </a>
    <span class='actions'>
      <%= render 'refinery/admin/glass/delete_button',
                 css_class: 'cancel confirm-delete circle-icon',
                 delete_url: refinery.blog_admin_section_path(section),
                 after_delete_url: refinery.blog_admin_sections_path,
                 confirm_text: 'Are you sure you want to delete this Section?',
                 delete_btn_text: '<i class="icon icon-trash"></i>'
      -%>
    </span>
  </div>
</li>
