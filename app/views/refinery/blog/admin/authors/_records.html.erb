<%= render 'refinery/admin/search_header', :url => refinery.blog_admin_authors_path %>
<div id="authors-index" <%= "class=infinite-scroll-container data-url=#{refinery.blog_admin_authors_path(:page => @authors.next_page)} data-pages-total=#{@authors.total_pages}" if @authors.any? %>>
  <% if @authors.any? %>
    <ul id='authors' class='list-unstyled sortable_list'>
      <%= render 'authors' %>
    </ul>
    <%= render 'refinery/admin/glass/infinite_scroll_spinner' %>
  <% else %>
    <p class="sortable_list">
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% end %>
    </p>
  <% end %>
</div>