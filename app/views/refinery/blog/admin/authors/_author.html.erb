<li class='page-listing' id="<%= dom_id(author) -%>">
  <div class="page-row">
    <!-- <i class="icon icon-file"></i> -->
    <a class="page-title" href="<%= refinery.edit_blog_admin_author_path(author) %>">
      <%= author.full_name %>
    </a>
    <span class='actions'>
      <%= render 'refinery/admin/glass/delete_button',
                 css_class: 'cancel confirm-delete circle-icon',
                 delete_url: refinery.blog_admin_author_path(author),
                 after_delete_url: refinery.blog_admin_authors_path,
                 confirm_text: 'Are you sure you want to delete this Author?',
                 delete_btn_text: '<i class="icon icon-trash"></i>'
      -%>

      <span class="preview">
        <%= link_to '<i class="icon icon-screen"></i>'.html_safe, refinery.blog_author_path(author),
            :title => t('.view_live_html'),
            :class => "circle-icon",
            :target => "_blank" %>
      </span>
    </span>
  </div>
</li>
